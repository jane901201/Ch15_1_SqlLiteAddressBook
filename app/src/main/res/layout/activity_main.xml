<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="202dp"
        android:layout_height="72dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:text="SQL lite展示\n通訊錄"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="165dp"
        android:layout_height="68dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="新增"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_query"
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="查詢"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/btn_insert"
        app:layout_constraintTop_toBottomOf="@+id/btn_insert" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="161dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:text="更改"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/btn_query"
        app:layout_constraintTop_toBottomOf="@+id/btn_query" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="162dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:text="刪除"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/btn_update"
        app:layout_constraintTop_toBottomOf="@+id/btn_update" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="162dp"
        android:layout_height="62dp"
        android:layout_marginTop="18dp"
        android:text="離開"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/btn_delete"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>